{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "removeComments": true
  },
  "lib": ["es2015"]
}
